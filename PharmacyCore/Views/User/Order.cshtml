@model IEnumerable<PharmacyCore.ViewModels.OrderViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DataOfOrder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DeliveryMethod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.StatusOfOrder)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.DataOfOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.DeliveryMethod)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.StatusOfOrder)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12">
                @*<a href="/User/Index">
                        <input type="button" class="btn btn-primary" value="<---" />
                    </a>*@
            </div>
        </div>
    </div>
</body>
</html>