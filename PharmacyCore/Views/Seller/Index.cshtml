@model IEnumerable<PharmacyCore.ViewModels.SellerOrderViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DataOfOrder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DeliveryMethod)
                    </th>
                    <th>
                        @Html.DisplayName("Akcja")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.DataOfOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.DeliveryMethod)
                        </td>
                        <td>
                            <a asp-controller="Seller" asp-action="DoneOrder" asp-route-orderId="@item.Id" asp-route-quantity="@item.Quantity" class="btn btn-danger"> Zrealizuj zamowienie</a>
                            <a asp-controller="Seller" asp-action="Information" asp-route-id="@item.Id" class="btn btn-info"> Odbiorca</a>
                            @*<a id="deleteUserModal" data-toggle="modal" asp-action="DeleteUser" asp-route-id="@item.MedicineId" data-target="#modal-action-user" class="btn btn-danger">
                                    Zrealizuj zamowienie
                                </a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>