@model PharmacyCore.ViewModels.CreateUserViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post))
        {
            <div class="row">
                <h3 class="col-md-12">Dodaj nowego pracownika</h3>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.UserDto.Name)
                    @Html.TextBoxFor(m => m.UserDto.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.UserDto.Surname)
                    @Html.TextBoxFor(m => m.UserDto.Surname, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.UserDto.Login)
                    @Html.TextBoxFor(m => m.UserDto.Login, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.UserDto.Password)
                    @Html.TextBoxFor(m => m.UserDto.Password, new { @class = "form-control", @type= "password" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.UserDto.Role)
                    @Html.DropDownListFor(m => m.UserDto.Role, new SelectList(
                        new[]
                        {
                            new {Value = "Sprzedawca", Text ="Sprzedawca"},
                            new {Value = "Dostawca", Text ="Dostawca"},
                        },
                        "Value",
                        "Text"
                    ))
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.UserDto.City)
                    @Html.TextBoxFor(m => m.UserDto.City, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.UserDto.Street)
                    @Html.TextBoxFor(m => m.UserDto.Street, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.UserDto.PhoneNumber)
                    @Html.TextBoxFor(m => m.UserDto.PhoneNumber, new { @class = "form-control", @type = "number" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-primary addDatabase" value="Dodaj do bazy!" />
                </div>
            </div>
        }
    </div>
</body>
</html>