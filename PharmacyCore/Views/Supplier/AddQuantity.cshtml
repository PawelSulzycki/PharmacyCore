@model IEnumerable<PharmacyCore.ViewModels.MedicineViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("AddQuantity", "Supplier", FormMethod.Post))
        {
            <div class="row">
                <h3 class="col-md-12">Dodaj ilość sztuk</h3>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.Label("Nazwa produktu:")
                    @Html.DropDownList("QuantityDto.MedicineId", new SelectList(Model.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"))
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.Label("Ilosc sztuk")
                    @Html.TextBox("QuantityDto.Quantity", null, new { @class = "form-control", @type = "number" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="/Supplier/Index">
                        <input type="button" class="btn btn-primary" value="<---" />
                    </a>
                    <input type="submit" class="btn btn-primary" value="Dodaj" />
                </div>
            </div>
        }
    </div>
</body>
</html>