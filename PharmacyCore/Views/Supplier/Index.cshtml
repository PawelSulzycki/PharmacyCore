@model IEnumerable<PharmacyCore.ViewModels.MedicineViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <a href="/Supplier/CreateMedicine">
                    <input type="button" class="btn btn-primary" value="Wprowadz nowy lek" />
                </a>
                <a href="/Supplier/AddQuantity">
                    <input type="button" class="btn btn-primary" value="Zwieksz ilość sztuk" />
                </a>
            </div>
        </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Manufacturer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.DataExpiration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.StorageMethod)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Manufacturer)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.DataExpiration, "{0:dd.MM.yyyy}")
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.StorageMethod)
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
</body>
</html>